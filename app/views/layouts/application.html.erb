                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
          </div>
	</div>
  <div class="title-mobile"> Mon Carnet de Route </div>
  
  <div id="navbar" class="navbar-collapse collapse">
      <div class="nav navbar-nav">
        <%= link_to "Carte", root_url + "map", :id => "nav-map" %>
        <hr/>
        <%= link_to "Chronologie", root_url + "timeline", :id => "nav-timeline" %>
        <hr/>
        <%= link_to "Themes", root_url + "themes", :id => "nav-themes" %>
        <%= link_to root_url + "search", :id => "nav-search" do %>
          <i class='fa fa-search'></i>
        <% end %>
        <a id="link-portfolio" href="http://www.gwen-fondeur.fr" target="_blank"> Mon Portefolio </a>
      </div>
  </div>

  <div class="body">
  <%= yield %>
  </div>

